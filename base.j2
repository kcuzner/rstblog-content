{# Base template for the blog #}
<!DOCTYPE html>
<html lang=en>
    <head>
        <title>{% block title %}{% endblock %} - Kevin Cuzner</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css" integrity="sha512-1fPmaHba3v4A7PaUsComSM4TBsrrRGs+/fv0vrzafQ+Rw+siILTiJa0NtFfvGeyY5E182SDTaF5PqP+XOHgJag==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="/css/rstblog.css" />
        <link rel="stylesheet" type="text/css" href="/css/pygments.css" />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="display-1"><a class="text-reset text-decoration-none " href="/">Kevin Cuzner's Personal Blog</a></h1>
                    <p class="lead">
                        Electronics, Embedded Systems, and Software are my breakfast, lunch, and dinner.
                    </p>
                    <hr/>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    {% block heading %}<h2>{{ self.title() }}</h2>{% endblock %}
                    {% block content %}{% endblock %}
                </div>
                <div class="col">
                    <h4>Recent posts</h4>
                    {% for _, post in zip(range(5), posts) %}
                        <a href="/{{post.url}}">{{ post.title }}</a><br />
                    {% endfor %}
                    <h4>Date</h4>
                    {% for date, path, _ in posts_by_month %}
                        <a class="badge rounded-pill text-primary bg-dark" href="/{{ path }}">{{ date.strftime("%b %Y") }}</a>
                    {% endfor %}
                    <h4>Tags</h4>
                    {% for tag, _ in posts_by_tag %}
                        <a class="badge rounded-pill text-primary bg-dark" href="/{{ tag.url }}">{{ tag.name }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </body>
</html>

{# Base template for the blog #}
<!DOCTYPE html>
<html lang=en>
    <head>
        <title>{% block title %}{% endblock %} - Kevin Cuzner</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="display-1">Kevin Cuzner's Personal Blog </h1>
                    <p class="lead">
                        Electronics, Embedded Systems, and Software are my breakfast, lunch, and dinner.
                    </p>
                    <hr/>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    {% block content %}{% endblock %}
                </div>
                <div class="col">
                    <h4>Recent posts</h4>
                    <h4>Tags</h4>
                    <h4>Date</h4>
                </div>
            </div>
        </div>
    </body>
</html>
